                        <label for="title">Novo título</label>
                        <input type="text" class="form-control" name="title" placeholder="Defina o novo título da categoria">
                        <br>
                        <button class="btn btn-success">Atualizar</button>
                    </form>
                </div>
            </div>
    </div> 
    
